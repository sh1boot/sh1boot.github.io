{%- capture preview -%} /images/shadertoy_cache/{{include.id}}.jpg {%- endcapture %}
{%- assign embed = null %}
{%- comment -%} https://shadertoy.com/media/shaders/{{include.id}}.jpg {%- endcomment %}
{%- comment -%} https://www.shadertoy.com/embed/{{include.id}}?paused=false&amp;gui=false {%- endcomment %}
{%- capture direct -%} https://www.shadertoy.com/view/{{include.id}} {%- endcapture %}
{%- assign sandbox="allow-scripts allow-same-origin allow-popups" %}
{%- assign buttontext="click to run shader (new tab)" %}
{%- capture id -%} shadertoy-{{include.id | slugify}} {%- endcapture %}

{%- include clickable-embed.liquid
    preview=include.image
    preview_default=preview
    embed=embed
    direct=direct
    sandbox=sandbox
    buttontext=buttontext
    id=id %}

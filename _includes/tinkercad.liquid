{%- capture direct -%} https://www.tinkercad.com/things/{{include.id}} {%- endcapture %}
{%- assign sandbox="allow-scripts allow-same-origin" %}
{%- assign buttontext="Click to view in 3D" %}
{%- capture id -%} tinkercad-{{include.id | slugify}} {%- endcapture %}

{%- include clickable-embed.liquid
    preview=include.image
    preview_default=preview
    embed=embed
    direct=direct
    sandbox=sandbox
    buttontext=buttontext
    id=id %}
